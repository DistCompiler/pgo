  trait CQTracingConfigModule extends TracingConfigModule:
    def commitHashDir: T[PathRef]
    
    def tracingExecutable: T[PathRef] = Task:
      val src = commitHashDir().path
      val includes = List(
        src,
        specHPP().path / os.up,
        omnilinkLibHPP().path / os.up,
      )
      val exeDest = Task.dest / "main"
